        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
      <outputDirectory>JBossWeb-Tomcat/lib/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>container/tomcat85/target/</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
      <outputDirectory>JBossWeb-Tomcat/lib/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>container/tomcat9/target/</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
      <outputDirectory>JBossWeb-Tomcat/lib/</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
