<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <includes>
        <include>*.txt</include>
      </includes>
    </fileSet>

    <!-- Demo -->
    <fileSet>
      <directory>demo/client/target/dependencies/lib</directory>
      <outputDirectory>demo/client/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>demo/client/target</directory>
      <outputDirectory>demo/client/lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>demo/client/target/classes</directory>
      <outputDirectory>demo/client</outputDirectory>
      <includes>
        <include>*.bat</include>
        <include>*.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>demo/server/target</directory>
      <outputDirectory>demo/server</outputDirectory>
      <includes>
        <include>*.war</include>
      </includes>
    </fileSet>

    <!-- Tomcat6/7 and jbossweb standalone -->
    <fileSet>
      <directory>container-spi/target/</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
      <outputDirectory>JBossWeb-Tomcat/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>core/target/</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
      <outputDirectory>JBossWeb-Tomcat/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>core/target/dependencies/lib/</directory>
      <includes>
        <include>jboss-logging.jar</include>
      </includes>
      <outputDirectory>JBossWeb-Tomcat/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>container/catalina/target/</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
      <outputDirectory>JBossWeb-Tomcat/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>container/catalina-standalone/target/</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
      <outputDirectory>JBossWeb-Tomcat/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>container/tomcat6/target/</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
      <outputDirectory>JBossWeb-Tomcat/lib/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>container/tomcat7/target/</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
      <outputDirectory>JBossWeb-Tomcat/lib/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>container/tomcat8/target/</directory>
